{
  "name": "github-issue-bookmarklet-server",
  "version": "1.0.0",
  "private": true,
  "description": "Github Issue Bookmarklet",
  "author": {
    "name": "Dave Shepard",
    "url": "https://github.com/kynatro"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kynatro/github-issue-bookmarklet"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "dotenv": "^6.2.0",
    "gh-pages": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "yargs": "^15.1.0"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.2.1",
    "node-sass": "^4.13.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.4.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "build:bookmarklet": "npm-run-all build:babel build:createURL --silent",
    "build:babel": "npx babel src/bookmarklet.js --out-dir dist --compact=true --minified --delete-dir-on-start --no-comments",
    "build:createURL": "node scripts/createURL.js",
    "copyBookmarklet": "cp -f src/bookmarklet.js public",
    "deploy": "npm run build && gh-pages -d build",
    "install": "npm run copyBookmarklet",
    "start": "npm run copyBookmarklet && react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
